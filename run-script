#!/bin/bash
# Script runner for Docker environment
# Usage: ./run-script <script_name>

if [ $# -eq 0 ]; then
    echo "Usage: $0 <script_name>"
    echo "Available scripts:"
    ls app/scripts/
    exit 1
fi

SCRIPT_NAME="$1"

# Check if script exists
if [ ! -f "app/scripts/$SCRIPT_NAME" ]; then
    echo "Script 'app/scripts/$SCRIPT_NAME' not found!"
    echo "Available scripts:"
    ls app/scripts/
    exit 1
fi

# Run the script in the Docker container
echo "Running script: $SCRIPT_NAME"
docker exec heal_butterflies_app python3 "/app/scripts/$SCRIPT_NAME"